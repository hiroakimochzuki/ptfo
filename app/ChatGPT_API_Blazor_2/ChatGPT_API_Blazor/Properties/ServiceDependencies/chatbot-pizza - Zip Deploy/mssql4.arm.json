{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "chatbot",
      "metadata": {
        "_parameterType": "resourceGroup",
        "description": "このリソースのリソース グループの名前。追跡機能を向上させるため、同じリソース グループにリソースを配置することをお勧めします。"
      }
    },
    "resourceGroupLocation": {
      "type": "string",
      "defaultValue": "japaneast",
      "metadata": {
        "_parameterType": "location",
        "description": "リソース グループの場所。リソース グループには、リソースとは異なる場所を指定できます。"
      }
    },
    "resourceLocation": {
      "type": "string",
      "defaultValue": "[parameters('resourceGroupLocation')]",
      "metadata": {
        "_parameterType": "location",
        "description": "リソースの場所。既定では、リソース グループの場所が使用されます (リソース プロバイダーがその場所でサポートされていない場合を除く)。"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "name": "[parameters('resourceGroupName')]",
      "location": "[parameters('resourceGroupLocation')]",
      "apiVersion": "2019-10-01"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(parameters('resourceGroupName'), 'Deployment', uniqueString(concat('chatbot-pizza-database', subscription().subscriptionId)))]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[parameters('resourceGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "kind": "v12.0",
              "location": "[parameters('resourceLocation')]",
              "name": "chatbot-pizza-server",
              "type": "Microsoft.Sql/servers",
              "apiVersion": "2017-10-01-preview"
            },
            {
              "sku": {
                "name": "GP_Gen5",
                "tier": "GeneralPurpose",
                "family": "Gen5",
                "capacity": 2
              },
              "kind": "v12.0,user,vcore",
              "location": "[parameters('resourceLocation')]",
              "name": "chatbot-pizza-server/chatbot-pizza-database",
              "type": "Microsoft.Sql/servers/databases",
              "apiVersion": "2017-10-01-preview",
              "dependsOn": [
                "chatbot-pizza-server"
              ]
            }
          ]
        }
      }
    }
  ],
  "metadata": {
    "_dependencyType": "mssql.azure"
  }
}